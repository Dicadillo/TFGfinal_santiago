{% extends 'base.html.twig' %}
{% block content %}
    <div class="bg-red-500 min-h-screen flex justify-center items-center">
        <div class="py-12 px-12 bg-white rounded-2xl shadow-xl z-20">
            <h1 class="text-3xl font-bold text-center mb-4 cursor-pointer">Usuarios</h1>

            {% if users is empty %}
                <p class="text-center mb-4">No se encontraron registros.</p>
            {% else %}
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Email</th>
                            <th>Roles</th>
                            <th>Password</th>
                            <th>Lastname</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                                <td>{{ user.password }}</td>
                                <td>{{ user.lastname }}</td>
                                <td>
                                    <a href="{{ path('app_profile_show', {'id': user.id}) }}" class="text-blue-500 hover:text-blue-700">Mostrar</a>
                                    <a href="{{ path('app_profile_edit', {'id': user.id}) }}" class="text-blue-500 hover:text-blue-700">Editar</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}

            <a href="{{ path('app_profile_new') }}" class="block text-center mt-4 text-blue-500 hover:text-blue-700">Crear nuevo</a>
        </div>
    </div>
{% endblock %}
