{% extends 'base.html.twig' %}

{% block content %}

  <div class="grid gap-8 mt-4 justify-center rounded-lg p-4 bg-red-600">
    <!-- Título de nuestros servicios -->
    <h2 class="text-2xl font-bold mt-8 text-white" align="center">Nuestros servicios</h2>

    <!-- Actividades -->
    {% for activity in activities %}
      <!-- Actividad individual -->
      <div class="bg-white rounded-lg shadow p-4 flex flex-col justify-between">
        <img src="{{ asset('images/' ~ activity.image) }}" alt="{{ activity.name }}" class="h-32 w-5/12 border rounded-full mx-auto mb-4">
        <div class="flex flex-col">
          <h3 class="text-xl font-bold">{{ activity.name }}</h3>
          <p class="text-gray-500">{{ activity.description }}</p>
          <div class="flex justify-between mt-4">
            <p>Duración: {{ activity.duration|date('H:i') }} horas</p>
            <p>Precio: {{ activity.price }} euros</p>
          </div>
          {% if app.user %}
            <a href="{{ path('app_reserve', {'id': activity.id}) }}" class="bg-blue-500 text-white px-4 py-2 rounded mt-4">Reservar ahora</a>
          {% else %}
            <a href="{{ path('app_login') }}" class="bg-blue-500 text-white px-4 py-2 rounded mt-4">Iniciar sesión para reservar</a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>

{% endblock %}
