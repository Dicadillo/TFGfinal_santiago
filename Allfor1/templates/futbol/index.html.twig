{% extends 'base.html.twig' %}

{% block content %}

    <div class="bg-red-500 min-h-screen flex justify-center items-center">
        <div class="py-12 px-12 bg-white rounded-2xl shadow-xl z-20">
            <div>
                <h1 class="text-3xl font-bold text-center mb-4 cursor-pointer">Reserva</h1>
                <p class="text-center text-sm mb-8 font-semibold text-green-700 tracking-wide cursor-pointer">Crea una nueva reserva</p>
            </div>

            {{ form_errors(form) }}

            <div class="space-y-4">
                {{ form_start(form) }}
                    {{ form_row(form.deporte, {'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full'}}) }}
                    {{ form_row(form.hora, {'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full'}}) }}
                    {{ form_row(form.participantes, {'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full'}}) }}
                    {{ form_row(form.Cantidad_pago, {'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full'}}) }}
                    <button type="submit" class="bg-green-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md">Reserva</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
