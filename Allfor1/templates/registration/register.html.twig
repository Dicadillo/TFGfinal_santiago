{% extends 'base.html.twig' %}

{% block content %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <div class="bg-red-500 min-h-screen flex justify-center items-center">
        <div class="py-12 px-12 bg-white rounded-2xl shadow-xl z-20">
            <div>
                <h1 class="text-3xl font-bold text-center mb-4 cursor-pointer">Registro</h1>
                <p class="text-center text-sm mb-8 font-semibold text-green-700 tracking-wide cursor-pointer">Crea una nueva cuenta</p>
            </div>

            {{ form_errors(registrationForm) }}

            <div class="space-y-4">
                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.email, {'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full'}}) }}
                    {{ form_row(registrationForm.plainPassword, {'label': 'Password', 'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full'}}) }}
                    {{ form_row(registrationForm.lastname, {'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full'}}) }}
                    {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'border border-gray-300 rounded-md p-2 w-full'}}) }}
                    <button type="submit" class="bg-green-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md">Register</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>

{% endblock %}
